<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SweatFlex.Maui.Views.Login"
             Title=""
             NavigationPage.HasNavigationBar="False"
             NavigationPage.HasBackButton="False" >
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="SweatFlex"
            HorizontalOptions="Center"
            FontSize="50"
            TextColor="{DynamicResource Primary}" />
        <Entry Placeholder="E-Mail" Keyboard="Email"/>
        <Entry Placeholder="Passwort" IsPassword="True"/>
        <Grid x:Name="LoginGrid" VerticalOptions="End" RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Grid.Row="2" Text="Login" />
            <Button Grid.Row="3" Text="Regestrieren" BackgroundColor="{DynamicResource Secondary}"/>
            <Button Grid.Row="4" Text="Passwort vergessen?" BackgroundColor="Transparent" BorderColor="Transparent" TextColor="Blue"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>