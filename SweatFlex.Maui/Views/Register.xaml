<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SweatFlex.Maui.Views.Register"
             Title="Register">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="SweatFlex"
            HorizontalOptions="Center"
            FontSize="50"
            TextColor="{DynamicResource Primary}" />
        <Entry Placeholder="Kundennummer"/>
        <Entry Placeholder="Vorname"/>
        <Entry Placeholder="Nachname"/>
        <Entry Placeholder="E-Mail" Keyboard="Email"/>
        <Entry Placeholder="Password" IsPassword="True"/>
        <Entry Placeholder="Password wiederholen" IsPassword="True"/>
        <Grid x:Name="LoginGrid" VerticalOptions="End" RowSpacing="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button Grid.Row="1" Text="Regestrieren"/>
            <Button Grid.Row="2" Text="Abbrechen" BackgroundColor="{DynamicResource Secondary}"/>
        </Grid>
    </VerticalStackLayout>
</ContentPage>