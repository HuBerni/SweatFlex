<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:micro="clr-namespace:Microcharts.Maui;assembly=Microcharts.Maui"
             xmlns:vm="clr-namespace:SweatFlex.Maui.ViewModels;assembly=SweatFlex.Maui"
             x:Class="SweatFlex.Maui.Views.Home"
             Title="Home">

    <VerticalStackLayout>
        <Label Text="Wilkommen zurück!" HorizontalOptions="Center" FontSize="Title" FontAttributes="Bold" Margin="20"/>
        <Picker Title="User auswählen" ItemsSource="{Binding Users}"/>
        <Label Text="Gewicht bewegt dieses Monat" HorizontalOptions="Center" FontSize="Medium"/>
        <Label Text="{Binding TotalWeight, StringFormat='{0} kg'}" Margin="10" HorizontalOptions="Center"/>
        <micro:ChartView x:Name="MonthlyChart" HeightRequest="200" Margin="10"/>
        <Label Text="12-Monats Rückblick" HorizontalOptions="Center" FontSize="Medium" Margin="10"/>
        <micro:ChartView x:Name="TwelveMonthsHistory" HeightRequest="200" Margin="10"/>
    </VerticalStackLayout>
</ContentPage>