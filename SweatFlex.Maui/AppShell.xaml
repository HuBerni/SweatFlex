<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SweatFlex.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SweatFlex.Maui"
    xmlns:views="clr-namespace:SweatFlex.Maui.Views"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:Login}"
        Route="MainPage" />

    <ShellContent
        Title="Register"
        ContentTemplate="{DataTemplate views:Register}"
        Route="Register" />

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="home.svg"
        ContentTemplate="{DataTemplate views:Home}"
        Route="Home"
        />
        <ShellContent
        Title="Workouts"
        Icon="gym_weight.svg"
        ContentTemplate="{DataTemplate views:Workouts}"
        Route="Workouts"
        />
        <ShellContent
        Title="Progress"
        Icon="graph_up_arrow.svg"
        ContentTemplate="{DataTemplate views:Progress}"
        Route="Porgress"
        />
        <ShellContent
        Title="Exercises"
        Icon="gym_weight.svg"
        ContentTemplate="{DataTemplate views:Exercises}"
        Route="Exercises"
        />
        <ShellContent
        Title="Settings"
        Icon="gear_fill.svg"
        ContentTemplate="{DataTemplate views:Settings}"
        Route="Settings"
        />
    </TabBar>
</Shell>
